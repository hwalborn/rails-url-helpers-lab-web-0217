<div>
  <% @students.each do |student| %>
    <h1><%= student.to_s %></h1>
    <% if student.active %>
      <p>This student is currently active.</p>
    <% else %>
      <p>This student is currently inactive.</p>
    <% end %>
    <div><%= link_to student.to_s, student_path(student) %></div>
  <% end %>
</div>
